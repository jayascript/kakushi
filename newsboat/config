# Format from moparx (http://moparx.com/configs)

auto-reload yes
browser palemoon
download-path "~/Podcasts"
cleanup-on-quit yes
feed-sort-order firsttag
feedlist-format "%4n %4U new %T from %t"
notify-always yes
notify-format "newsboat: %n unread articles from %f unread feeds"
notify-program notify-send
notify-xterm yes
notify-screen yes
player mpv
refresh-on-startup yes

# ----- #
# THEME #
# ----- #

color background white default
color listnormal white default
color listfocus white blue  standout
color info blue default standout
color listfocus_unread white blue bold    standout
color listnormal_unread white default bold

# ------ #
# MACROS #
# ------ #

macro , open-in-browser
macro y set browser "i3 exec 'mpv --ytdl-format=best %u'"; open-in-browser ; set browser "palemoon %u"

# Config from https://forums.freebsd.org/threads/newsboat-rss-reader-enable-vim-key-bindings.69448/
# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
